{
  "name": "open-bible-translation",
  "version": "0.1.0",
  "private": true,
  "description": "Open source AI-assisted Bible translation platform with radical transparency",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter @open-bible/web dev",
    "build": "pnpm --filter @open-bible/web build",
    "start": "pnpm --filter @open-bible/web start",
    "test": "vitest run",
    "lint": "pnpm --filter @open-bible/web lint",
    "typecheck": "pnpm -r run typecheck",
    "clean": "rm -rf node_modules apps/web/.next apps/web/out"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "vitest": "^3.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
